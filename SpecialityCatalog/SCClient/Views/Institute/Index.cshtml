@model List<Institute>
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <a href="/Institute/Add" class=" btn btn-primary">Добавить институт</a>
</div>
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var institute in Model)
            {
                <tr>
                    <td>@institute.Id</td>
                    <td>@institute.Name</td>
                    <td>
                        <a href="/Institute/Edit/@institute.Id">Редактировать</a>
                        <a href="/Institute/Remove/@institute.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
